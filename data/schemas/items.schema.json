{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ItemDefinitions",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "code",
      "name",
      "description",
      "rarity",
      "stack_limit",
      "value"
    ],
    "properties": {
      "code": {
        "type": "string",
        "minLength": 2,
        "maxLength": 64
      },
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "description": {
        "type": "string",
        "minLength": 2,
        "maxLength": 500
      },
      "rarity": {
        "type": "string",
        "enum": ["COMMON", "UNCOMMON", "RARE", "EPIC"]
      },
      "stack_limit": {
        "type": "integer",
        "minimum": 1,
        "maximum": 9999
      },
      "value": {
        "type": "integer",
        "minimum": 0,
        "maximum": 1000000
      }
    }
  }
}
