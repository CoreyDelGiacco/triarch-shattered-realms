{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ZoneDefinitions",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "name",
      "risk_level",
      "pvp_enabled",
      "loot_drop_on_death",
      "description",
      "resource_tier"
    ],
    "properties": {
      "id": {
        "type": "integer",
        "minimum": 1
      },
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "risk_level": {
        "type": "string",
        "enum": ["SAFE", "CONTESTED", "HIGH_RISK"]
      },
      "pvp_enabled": {
        "type": "boolean"
      },
      "loot_drop_on_death": {
        "type": "string",
        "enum": ["NONE", "PARTIAL", "FULL"]
      },
      "description": {
        "type": "string",
        "minLength": 2,
        "maxLength": 500
      },
      "resource_tier": {
        "type": "string",
        "enum": ["COMMON", "MID_TIER", "EXOTIC"]
      }
    }
  }
}
