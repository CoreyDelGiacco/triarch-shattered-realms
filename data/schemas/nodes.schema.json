{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ResourceNodes",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "code",
      "name",
      "skill_code",
      "zone_id",
      "position",
      "interaction_radius",
      "cooldown_seconds",
      "min_skill_level",
      "loot_table"
    ],
    "properties": {
      "code": {
        "type": "string",
        "minLength": 2,
        "maxLength": 64
      },
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 120
      },
      "skill_code": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "zone_id": {
        "type": "integer",
        "minimum": 1
      },
      "position": {
        "type": "object",
        "additionalProperties": false,
        "required": ["x", "y"],
        "properties": {
          "x": { "type": "number" },
          "y": { "type": "number" }
        }
      },
      "interaction_radius": {
        "type": "number",
        "minimum": 1
      },
      "cooldown_seconds": {
        "type": "integer",
        "minimum": 1
      },
      "min_skill_level": {
        "type": "integer",
        "minimum": 1
      },
      "loot_table": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["item_code", "min_quantity", "max_quantity", "weight"],
          "properties": {
            "item_code": {
              "type": "string",
              "minLength": 2,
              "maxLength": 64
            },
            "min_quantity": {
              "type": "integer",
              "minimum": 1
            },
            "max_quantity": {
              "type": "integer",
              "minimum": 1
            },
            "weight": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    }
  }
}
