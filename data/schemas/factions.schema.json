{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FactionDefinitions",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "name", "code", "philosophy", "description"],
    "properties": {
      "id": {
        "type": "integer",
        "minimum": 1
      },
      "name": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "code": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "philosophy": {
        "type": "string",
        "minLength": 2,
        "maxLength": 100
      },
      "description": {
        "type": "string",
        "minLength": 2,
        "maxLength": 500
      }
    }
  }
}
